{
  "compilerOptions": {
    "target": "es2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@services": ["src/services/index"],
      "@services/*": ["src/services/*"],
      "@ui": ["src/ui/index"],
      "@ui/*": ["src/ui/*"],
      "@commands": ["src/commands/index"],
      "@commands/*": ["src/commands/*"],
      "@types": ["src/types"]
    },
    "lib": ["es2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
