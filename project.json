{
  "name": "plannet",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "commands": [
          "nx run plannet:build:compile",
          "nx run plannet:build:resolve-paths"
        ],
        "parallel": false
      }
    },
    "build:compile": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist",
        "main": "src/cli.ts",
        "tsConfig": "tsconfig.json",
        "assets": []
      }
    },
    "build:resolve-paths": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc-alias -p tsconfig.json"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx src/cli.ts"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit"
      }
    },
    "build:exe": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/bin"],
      "options": {
        "command": "bun build src/cli.ts --compile --outfile dist/bin/plannet"
      }
    },
    "build:exe:all": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/bin"],
      "options": {
        "commands": [
          "bun build src/cli.ts --compile --outfile dist/bin/plannet-darwin-arm64 --target bun-darwin-arm64",
          "bun build src/cli.ts --compile --outfile dist/bin/plannet-darwin-x64 --target bun-darwin-x64",
          "bun build src/cli.ts --compile --outfile dist/bin/plannet-linux-x64 --target bun-linux-x64",
          "bun build src/cli.ts --compile --outfile dist/bin/plannet-windows-x64.exe --target bun-windows-x64"
        ],
        "parallel": true
      }
    }
  }
}
