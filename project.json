{
  "name": "plannet",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "commands": [
          "nx run plannet:build:compile",
          "nx run plannet:build:resolve-paths"
        ],
        "parallel": false
      }
    },
    "build:compile": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist",
        "main": "src/cli.ts",
        "tsConfig": "tsconfig.json",
        "assets": []
      }
    },
    "build:resolve-paths": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc-alias -p tsconfig.json"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx src/cli.ts"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit"
      }
    }
  }
}
